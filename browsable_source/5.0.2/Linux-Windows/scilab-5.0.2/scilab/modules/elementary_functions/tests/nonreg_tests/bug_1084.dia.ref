A = rand(1,3,'normal');
rand('seed',0);
B = rand(1,3,'normal');
rand('seed',0);
rand('seed',0);
C = rand(1,3,'normal');
if or(A<>B) then bugmes();quit;end
if or(B<>C) then bugmes();quit;end
if or(A<>C) then bugmes();quit;end
