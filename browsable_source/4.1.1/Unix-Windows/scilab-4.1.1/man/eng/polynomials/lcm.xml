    <SEE_ALSO_ITEM>
      <LINK>gcd</LINK>
    </SEE_ALSO_ITEM>
    <SEE_ALSO_ITEM>
      <LINK>bezout</LINK>
    </SEE_ALSO_ITEM>
  </SEE_ALSO>
</MAN>
