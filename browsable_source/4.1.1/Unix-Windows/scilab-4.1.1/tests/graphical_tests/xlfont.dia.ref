  %ans = xlfont('Century Schoolbook Bold', 10);
  if load_ref('%ans') then   bugmes();quit;end,
else
  %ans = xlfont('-adobe-new century schoolbook-bold-r-normal-*-%s-*-75-75-*-*-iso8859-1', 10);
  if load_ref('%ans') then   bugmes();quit;end,
end,
 
%ans = xbasc_run();
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
