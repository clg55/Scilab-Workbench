<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE MAN SYSTEM "../../manrev.dtd">
<MAN>
  <LANGUAGE>fr</LANGUAGE>

  <TITLE>toolbar</TITLE>

  <TYPE>Fonction Scilab</TYPE>

  <DATE>16-Fev-2005</DATE>

  <SHORT_DESCRIPTION name="toolbar">montre ou cache la toolbar (pour Windows)
  (Windows)</SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>state1=toolbar(winnum,state2)</CALLING_SEQUENCE_ITEM>

    <CALLING_SEQUENCE_ITEM>state1=toolbar(winnum)</CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>state1</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: retourne l'etat de la toolbar 'on' ou 'off'</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>

      <PARAM_ITEM>
        <PARAM_NAME>winum</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: numero de la fenetre (-1 : console )</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>

      <PARAM_ITEM>
        <PARAM_NAME>state2</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: 'on' ou 'off' fixe l'etat de la toolbar</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>
  </PARAM>

  <DESCRIPTION>
    <P>montre ou cache la toolbar (pour Windows).</P>
  </DESCRIPTION>

  <EXAMPLE><![CDATA[toolbar(-1,'off')
state=toolbar(-1,'on')

plot3d();
h=gcf();
toolbar(h.figure_id,'off')

]]></EXAMPLE>

  <AUTHOR>Allan CORNET</AUTHOR>
</MAN>