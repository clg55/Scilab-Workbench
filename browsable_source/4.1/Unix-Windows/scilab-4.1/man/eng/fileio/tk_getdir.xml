      <LINK>tk_getfile</LINK>
    </SEE_ALSO_ITEM>
    <SEE_ALSO_ITEM>
      <LINK>file</LINK>
    </SEE_ALSO_ITEM>
    <SEE_ALSO_ITEM>
      <LINK>fileinfo</LINK>
    </SEE_ALSO_ITEM>
  </SEE_ALSO>
</MAN>
