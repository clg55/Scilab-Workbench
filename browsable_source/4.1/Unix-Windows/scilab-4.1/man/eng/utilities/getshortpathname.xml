<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MAN SYSTEM "../../manrev.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>

  <TITLE>getshortpathname</TITLE>

  <TYPE>Scilab Function</TYPE>

  <DATE>February 2005</DATE>

  <SHORT_DESCRIPTION name="getshortpathname">get short path name (Only for
  Windows)</SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>shortpath=getshortgpathname(longpath)</CALLING_SEQUENCE_ITEM>

    <CALLING_SEQUENCE_ITEM>[shortpath,bOK]=getshortpathname(longpath)</CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>longpath</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: A character string the long path</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>

      <PARAM_ITEM>
        <PARAM_NAME>shortpath</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: A character string the short path</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>

      <PARAM_ITEM>
        <PARAM_NAME>bOK</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: A boolean %T if path has been converted else %F</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>
  </PARAM>

  <DESCRIPTION>
    <P>The getshortpathname primitive converts the specified path to its short
    form.</P>
  </DESCRIPTION>

  <EXAMPLE><![CDATA[[shortpath,bOK]=getshortpathname(SCI) 
 ]]></EXAMPLE>

  <SEE_ALSO>
    <SEE_ALSO_ITEM>
      <LINK>getlongpathname</LINK>
    </SEE_ALSO_ITEM>
  </SEE_ALSO>

  <AUTHOR>Allan CORNET</AUTHOR>
</MAN>