<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MAN SYSTEM "../../manrev.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>

  <TITLE>toolbar</TITLE>

  <TYPE>Scilab Function</TYPE>

  <DATE>16-Feb-2005</DATE>

  <SHORT_DESCRIPTION name="toolbar">show or hide a toolbar
  (Windows)</SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>state1=toolbar(winnum,state2)</CALLING_SEQUENCE_ITEM>

    <CALLING_SEQUENCE_ITEM>state1=toolbar(winnum)</CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>state1</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: returns toolbar's state 'on' or 'off'</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>

      <PARAM_ITEM>
        <PARAM_NAME>winum</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: window's number (-1 : console )</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>

      <PARAM_ITEM>
        <PARAM_NAME>state2</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: 'on' or 'off' set toolbar's state</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>
  </PARAM>

  <DESCRIPTION>
    <P>show or hide a toolbar (Windows).</P>
  </DESCRIPTION>

  <EXAMPLE><![CDATA[toolbar(-1,'off')
state=toolbar(-1,'on')

plot3d();
h=gcf();
toolbar(h.figure_id,'off')

]]></EXAMPLE>

  <AUTHOR>Allan CORNET</AUTHOR>
</MAN>