  <TITLE>meshgrid</TITLE>

  <TYPE>Scilab Function</TYPE>

  <DATE> 2005</DATE>

  <SHORT_DESCRIPTION name="meshgrid"> construit des matrices ou des tableaux
  3-D</SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>[X, Y] = meshgrid(x)</CALLING_SEQUENCE_ITEM>

    <CALLING_SEQUENCE_ITEM>[X, Y] = meshgrid(x,y)</CALLING_SEQUENCE_ITEM>

    <CALLING_SEQUENCE_ITEM>[X, Y, Z] = meshgrid(x,y,z)</CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>x, y, z</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: des vecteurs</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>

      <PARAM_ITEM>
        <PARAM_NAME>X, Y, Z</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: des matrices dans le cas de 2 arguments d'entrées, sinon des
          tableaux des tableaux 3-D dans le cas de 3 arguments d'entrées </SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>
  </PARAM>

  <DESCRIPTION>
    <P>...</P>
  </DESCRIPTION>

