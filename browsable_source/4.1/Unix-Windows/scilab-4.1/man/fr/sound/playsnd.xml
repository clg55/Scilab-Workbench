<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE MAN SYSTEM "../../manrev.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>playsnd</TITLE>
  <TYPE>Scilab Function</TYPE>
  <DATE>April 1993</DATE>
  <SHORT_DESCRIPTION name="playsnd">  sound player facility</SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>[]=playsnd(y)  </CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>[]=playsnd(y,fs,bits)  </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>y</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: real vector</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
      <PARAM_ITEM>
        <PARAM_NAME>fs</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: real number, sampling frequency. Unused yet.</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
      <PARAM_ITEM>
        <PARAM_NAME>bits</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: real number, number of bits (usually 8 or 16). Unused yet.</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
    <P>Redirects a linear signal to <VERB>/dev/audio/</VERB>.</P>
  </DESCRIPTION>
  <EXAMPLE>
<![CDATA[
  y=wavread('SCI/demos/signal/sound/chimes.wav');
  playsnd(y)


 ]]>
  </EXAMPLE>
  <SEE_ALSO>
    <SEE_ALSO_ITEM>
      <LINK>lin2mu</LINK>
    </SEE_ALSO_ITEM>
    <SEE_ALSO_ITEM>
      <LINK>wavread</LINK>
    </SEE_ALSO_ITEM>
  </SEE_ALSO>
</MAN>
