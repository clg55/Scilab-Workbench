<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE MAN SYSTEM "../../manrev.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>scaling</TITLE>
  <TYPE>Scilab Function</TYPE>
  <DATE>April 1993</DATE>
  <SHORT_DESCRIPTION name="scaling"> affine transformation of a set of points</SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>xy1=scaling(xy,factor,[orig])  </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>xy1</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: matrice of size (2,.).</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
      <PARAM_ITEM>
        <PARAM_NAME>xy</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: matrice of size (2,.).</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
      <PARAM_ITEM>
        <PARAM_NAME>factor</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: real scalar, coefficient of the linear transformation.</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
      <PARAM_ITEM>
        <PARAM_NAME>orig</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: shift vector; default value is [0;0].</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
    <P><VERB>scaling</VERB> performs an affine transformation on the set of points defined
    by the coordinates <VERB>xy</VERB>:</P>
    <P><VERB>xy1(:,i) = factor * xy(:,i) + orig</VERB>.</P>
  </DESCRIPTION>
</MAN>
