 
getf SCI/util/testexamples.sci
 
reinit_for_test()
 
%U=mopen('SCI/tests/graphical_tests/xaxis_data.ref','rb');
 
x = (-%pi:0.1:%pi)';
 
// plot without axis
 
%ans = plot2d(x, sin(x), 1, '010', ' ', [-4,-1,4,1]);
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
// draw x axis
 
%ans = xpoly([-4,4], [0,0], 'lines');
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
%ans = xaxis(0, [2,2], [2,0.1,3], [-4,0]);
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
xstring(-4.1, -0.25, '-4');xstring(-0.2, -0.1, '0');%ans = xstring(4, -0.25, '4');
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
// draw y axis
 
%ans = xpoly([0,0], [-1,1], 'lines');
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
%ans = xaxis(90, [2,2], [0.5,0.025,3], [0,1]);
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
xstring(-0.5, -1.05, '-1');%ans = xstring(-0.35, 0.95, '1');
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
xdel_run(winsid());
 
 
mclose(%U);
 
