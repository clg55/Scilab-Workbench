<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?> 
<!DOCTYPE MAN SYSTEM "../../man.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>convstr  </TITLE>
  <TYPE>Scilab Function  </TYPE>
  <DATE>April 1993  </DATE>
  <SHORT_DESCRIPTION name="convstr"> case conversion  </SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
  <CALLING_SEQUENCE_ITEM>[y]=convstr(str-matrix, [&quot;flag&quot;])   </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
 <PARAM_INDENT>
  <PARAM_ITEM>
  <PARAM_NAME>str-matrix, y  </PARAM_NAME>
  <PARAM_DESCRIPTION>
    : matrices of strings
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
  <PARAM_ITEM>
  <PARAM_NAME>&quot;flag&quot;  </PARAM_NAME>
  <PARAM_DESCRIPTION>
    : string (<VERB>&quot;u&quot;</VERB> for upper or <VERB>&quot;l&quot;</VERB> for lower (default value))
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
 </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
  <P>
    converts the matrix of strings <VERB>str-matrix</VERB>
    into lower case (for <VERB>&quot;l&quot;</VERB> ;default value) or
    upper case (for <VERB>&quot;u&quot;</VERB>).
  </P>
  </DESCRIPTION>
  <EXAMPLE><![CDATA[
A=['this','is';'my','matrix'];
convstr(A,'u')
 ]]></EXAMPLE>
</MAN>
