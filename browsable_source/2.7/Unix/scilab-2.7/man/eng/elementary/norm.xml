<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?> 
<!DOCTYPE MAN SYSTEM "../../man.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>norm  </TITLE>
  <TYPE>Scilab Function  </TYPE>
  <DATE>April 1993  </DATE>
  <SHORT_DESCRIPTION name="norm"> matrix norms  </SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
  <CALLING_SEQUENCE_ITEM>[y]=norm(x [,flag])  </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
 <PARAM_INDENT>
  <PARAM_ITEM>
  <PARAM_NAME>x  </PARAM_NAME>
  <PARAM_DESCRIPTION>
    : real or complex vector or matrix (full or sparse storage)
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
  <PARAM_ITEM>
  <PARAM_NAME>flag  </PARAM_NAME>
  <PARAM_DESCRIPTION>
    : string (type of norm) (default value =2)
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
 </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
  <P>
    For matrices
  </P>
 

  <DESCRIPTION_ITEM  label='norm(x)'> 
    : or <VERB>norm(x,2)</VERB> is the largest singular value of <VERB>x</VERB> (<VERB>max(svd(x))</VERB>). 
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='norm(x,1)'> 
    : The l_1 norm <VERB>x</VERB> (the largest column sum :  <VERB>maxi(sum(abs(x),&apos;r&apos;))</VERB>  ).
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='norm(x,&apos;inf&apos;),norm(x,%inf)'> 
    : The infinity norm of <VERB>x</VERB> (the largest row sum :  <VERB>maxi(sum(abs(x),&apos;c&apos;))</VERB>  ).
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='norm(x,&apos;fro&apos;)'> 
    : Frobenius norm i.e. <VERB>sqrt(sum(diag(x&apos;*x)))</VERB>
  </DESCRIPTION_ITEM>
 
  <P>
    For vectors
  </P>
 

  <DESCRIPTION_ITEM  label='norm(v,p)'> 
    : l_p norm (<VERB>sum(v(i)^p))^(1/p)</VERB> .
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='norm(v)'> 
    : <VERB>=norm(v,2)</VERB> : l_2 norm
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='norm(v,&apos;inf&apos;)'> 
    : <VERB>max(abs(v(i)))</VERB>.
  </DESCRIPTION_ITEM>
 
  </DESCRIPTION>
  <EXAMPLE><![CDATA[
A=[1,2,3];
norm(A,1)
norm(A,'inf')
A=[1,2;3,4]
max(svd(A))-norm(A)

A=sparse([1 0 0 33 -1])
norm(A)

 ]]></EXAMPLE>
