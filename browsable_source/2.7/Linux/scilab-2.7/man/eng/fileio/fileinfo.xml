<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?> 
<!DOCTYPE MAN SYSTEM "../../man.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>fileinfo  </TITLE>
  <TYPE>Scilab Function  </TYPE>
  <DATE>Jun 1999  </DATE>
  <SHORT_DESCRIPTION name="fileinfo"> Provides information about a file  </SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
  <CALLING_SEQUENCE_ITEM>[x,ierr]=fileinfo(file)  </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
 <PARAM_INDENT>
  <PARAM_ITEM>
  <PARAM_NAME>file  </PARAM_NAME>
  <PARAM_DESCRIPTION>
    : a character string, the file pathname
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
  <PARAM_ITEM>
  <PARAM_NAME>x  </PARAM_NAME>
  <PARAM_DESCRIPTION>
    : an integer vector of size 6 containing information or an empty matrix if file does not exist.
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
  <PARAM_ITEM>
  <PARAM_NAME>ierr  </PARAM_NAME>
  <PARAM_DESCRIPTION>
    : error indicator, 0, if no error has occured
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
 </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
  <P>
    x=fileinfo(file) returns
  </P>
 

  <DESCRIPTION_ITEM  label='x(1)'> 
    : The file size
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(2)'> 
    : The file mode
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(3)'> 
    : The user id
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(4)'> 
    : the group id
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(5)'> 
    : The device number
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(6)'> 
    : The date of last modification
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(7)'> 
    : The date of last change 
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(8)'> 
    : The date of last access 
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(9)'> 
    : The device type (if inode device) 
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(10)'> 
    : The blocksize for filesystem I/O 
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(11)'> 
    : The  number of blocks allocated 
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(12)'> 
    : The inode 
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='x(13)'> 
    : The number of hard links 
  </DESCRIPTION_ITEM>
 
  </DESCRIPTION>
  <ITEMIZE label='REFERENCE'>
  <P>
    This function is an interface to the C function stat.
  </P>
  </ITEMIZE>
  <EXAMPLE><![CDATA[
w=fileinfo(SCI+'/scilab.star')
getdate(w(6))

   ]]></EXAMPLE>

