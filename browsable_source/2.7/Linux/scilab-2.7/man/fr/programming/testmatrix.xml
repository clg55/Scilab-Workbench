<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?> 
<!DOCTYPE MAN SYSTEM "../../man.dtd">
<MAN>
  <LANGUAGE>fr</LANGUAGE>
  <TITLE>testmatrix  </TITLE>
  <TYPE>Scilab Function  </TYPE>
  <DATE>April 1993  </DATE>
  <SHORT_DESCRIPTION name="testmatrix"> génération de matrices remarquables  </SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
  <CALLING_SEQUENCE_ITEM>[y]=testmatrix(name,n)  </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
 <PARAM_INDENT>
  <PARAM_ITEM>
  <PARAM_NAME>name  </PARAM_NAME>
  <PARAM_DESCRIPTION>
    : chaîne de caractères
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
  <PARAM_ITEM>
  <PARAM_NAME>n  </PARAM_NAME>
  <PARAM_DESCRIPTION>
    : entier
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
  <PARAM_ITEM>
  <PARAM_NAME>y  </PARAM_NAME>
  <PARAM_DESCRIPTION>
    : matrice <VERB>n</VERB> x <VERB>n</VERB>
  </PARAM_DESCRIPTION> 
  </PARAM_ITEM>
 </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
  <P>
    Génère certaines matrices carrées particulières.
  </P>
 

  <DESCRIPTION_ITEM  label='testmatrix(&apos;magi&apos;,n)'> 
    : renvoie un carré magique de taille <VERB>n</VERB>.
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='testmatrix(&apos;frk&apos;,n)'> 
    : renvoie la matrice de Franck :
  </DESCRIPTION_ITEM>

  <DESCRIPTION_ITEM  label='testmatrix(&apos;hilb&apos;,n)'> 
    : renvoie l&apos;inverse de la matrice de Hilbert de taille n x n   <VERB> (Hij= 1/(i+j-1))</VERB>.
  </DESCRIPTION_ITEM>
 
  </DESCRIPTION>
</MAN>
