 
getf SCI/util/testexamples.sci
 
reinit_for_test()
 
%U=mopen('SCI/tests/automatic_tests/spec_data.ref','rb');
 
// MATRIX EIGENVALUES
 
A = diag([1,2,3]);X = rand(3, 3);A = inv(X) * A * X;
 
%ans = spec(A);
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
//
 
x = poly(0, 'x');
 
pol = det(x * eye() - A);
 
if load_ref('pol') then   bugmes();quit;end,
 
 
%ans = roots(pol);
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
//
 
[S,X] = bdiag(A);
 
%ans = clean(inv(X) * A * X);
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
 
// PENCIL EIGENVALUES
 
A = rand(3, 3);
 
[al,be,Z] = spec(A, eye(A));%ans = al0./ be;
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
%ans = clean(inv(Z) * A * Z);
 
if load_ref('%ans') then   bugmes();quit;end,
 
//displaying the eigenvalues (generic matrix)
 
A = A + %i * rand(A);E = rand(A);
 
%ans = roots(det(%s * E - A));
 
if load_ref('%ans') then   bugmes();quit;end,
 
