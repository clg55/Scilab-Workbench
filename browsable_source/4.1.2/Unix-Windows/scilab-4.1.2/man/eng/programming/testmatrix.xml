<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE MAN SYSTEM "../../manrev.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>testmatrix</TITLE>
  <TYPE>Scilab Function</TYPE>
  <DATE>April 1993</DATE>
  <SHORT_DESCRIPTION name="testmatrix"> generate some particular matrices</SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>[y]=testmatrix(name,n)  </CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>name</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: a character string</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
      <PARAM_ITEM>
        <PARAM_NAME>n</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: integers, matrix size</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
      <PARAM_ITEM>
        <PARAM_NAME>y</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: <VERB>n</VERB> x <VERB>m</VERB> matrix</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
    <P>
    Create some particular matrices
  </P>
    <DESCRIPTION_INDENT>
      <DESCRIPTION_ITEM label="testmatrix('magi',n)">
        <SP>: returns a magic square of size <VERB>n</VERB> .</SP>
      </DESCRIPTION_ITEM>
      <DESCRIPTION_ITEM label="testmatrix('frk',n)">
        <SP>: returns the Franck matrix :</SP>
      </DESCRIPTION_ITEM>
      <DESCRIPTION_ITEM label="testmatrix('hilb',n)">
        <SP>: is the inverse of the nxn Hilbert matrix  <VERB> (Hij= 1/(i+j-1))</VERB>.</SP>
      </DESCRIPTION_ITEM>
    </DESCRIPTION_INDENT>
  </DESCRIPTION>
</MAN>
