 
getf SCI/util/testexamples.sci
 
reinit_for_test()
 
%U=mopen('SCI/tests/automatic_tests/TK_EvalStr_data.ref','rb');
 
//with one call
 
%ans = TCL_EvalStr(['toplevel0.foo1';
  'label0.foo1.l -text ""TK married Scilab !!!""';
  'pack0.foo1.l';
  'button0.foo1.b -text close -command {destroy0.foo1}';
  'pack0.foo1.b']);
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
 
//step by step (debugging)
 
TCL_EvalStr('toplevel0.foo2');
 
// creates a toplevel TK window.
 
TCL_EvalStr('label0.foo2.l -text ""TK married Scilab !!!""');
 
// create a static label
 
TCL_EvalStr('pack0.foo2.l');
 
// pack the label widget. It appears on the screen.
 
text = 'button0.foo2.b -text close -command {destroy0.foo2}';
 
TCL_EvalStr(text);
 
TCL_EvalStr('pack0.foo2.b');
 
 
//kill the windows by program
 
TCL_EvalStr('destroy0.foo1');
 
TCL_EvalStr('destroy0.foo2');
 
 
//with one call, and in a slave interpreter
 
TCL_CreateSlave('TCLSlave');
 
TCL_EvalStr('set test ""in Slave TCL Interp""', 'TCLSlave');
 
%ans = TCL_GetVar('test', 'TCLSlave');
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
 
%ans = TCL_DeleteInterp('TCLSlave');
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
xdel_run(winsid());
 
 
mclose(%U);
 
