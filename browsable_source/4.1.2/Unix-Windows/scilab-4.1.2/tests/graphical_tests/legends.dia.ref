 
getf SCI/util/testexamples.sci
 
reinit_for_test()
 
%U=mopen('SCI/tests/graphical_tests/legends_data.ref','rb');
 
t = 0:0.1:2 * %pi;
 
plot2d(t, [cos(t'),cos(2 * t'),cos(3 * t')], [-1,2,3]);
 
%ans = legends(['cos(t)';'cos(2*t)';'cos(3*t)'], [-1,2,3], opt='lr');
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
xset('line style', 2);plot2d(t, cos(t), style=5);
 
xset('line style', 4);plot2d(t, sin(t), style=3);
 
%ans = legends(['sin(t)';'cos(t)'], [[5;2],[3;4]], with_box=%f, opt='?');
 
if load_ref('%ans') then   bugmes();quit;end,
 
 
xdel_run(winsid());
 
 
mclose(%U);
 
