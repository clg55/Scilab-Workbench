<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE MAN SYSTEM "../../manrev.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>loadmatfile</TITLE>
  <TYPE>Scilab Function</TYPE>
  <DATE>2002</DATE>
  <SHORT_DESCRIPTION name="loadmatfile">loads a Matlab V6 MAT-file (binary or ASCII) into Scilab</SHORT_DESCRIPTION>
  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>loadmatfile(format,filename[,var1[,var2[,...]]])</CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>loadmatfile(filename[,format[,var1[,var2[,...]]]])</CALLING_SEQUENCE_ITEM>
    <CALLING_SEQUENCE_ITEM>loadmatfile(filename[,var1[,var2,[,...[,format]]]])</CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>
  <PARAM>
  <PARAM_INDENT>
    <PARAM_ITEM>
       <PARAM_NAME>filename</PARAM_NAME>
       <PARAM_DESCRIPTION>
         <SP>: character string containing the path of the file (needed)</SP>
       </PARAM_DESCRIPTION>
     </PARAM_ITEM>
     <PARAM_ITEM>
       <PARAM_NAME>format</PARAM_NAME>
       <PARAM_DESCRIPTION>
         <SP>: file format (if not given and file has extension &quot;.mat&quot;, file is considered to be binary)</SP>
         <PARAM_INDENT>
           <PARAM_ITEM>
             <PARAM_NAME>&quot;-mat&quot;</PARAM_NAME>
             <PARAM_DESCRIPTION>
                <SP>: binary file</SP>
              </PARAM_DESCRIPTION>
            </PARAM_ITEM>
            <PARAM_ITEM>
              <PARAM_NAME>&quot;-ascii&quot;</PARAM_NAME>
              <PARAM_DESCRIPTION>
                <SP>: option to force Scilab to read file as an ASCII file</SP>
              </PARAM_DESCRIPTION>
            </PARAM_ITEM>
          </PARAM_INDENT>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
      <PARAM_ITEM>
        <PARAM_NAME>var1, var2</PARAM_NAME>
        <PARAM_DESCRIPTION>
          <SP>: character strings containing the name of the variables to load (only for binary files)</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>
  </PARAM>
  <DESCRIPTION>
    <P>
    loads a Matlab MAT-file into Scilab. The Matlab data types are
    converted into the Scilab equivalents.</P>
  </DESCRIPTION>
  <SEE_ALSO>
